<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>profileSuccess</from-outcome>
			<to-view-id>/userProfile.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>portfolioSuccess</from-outcome>
			<to-view-id>/portfolio.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>userProfile.xhtml</display-name>
		<from-view-id>/userProfile.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>profileHomeSuccess</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<display-name>portfolio.xhtml</display-name>
		<from-view-id>/portfolio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>portfolioHomeSuccess</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


</faces-config>
